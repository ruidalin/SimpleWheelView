<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dalin.simplewheelview.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!" />

        <com.dalin.simplewheelview.WheelView
            android:id="@+id/wheelView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemTextColor="@color/colorPrimary"
            app:itemTextPadding="0dp"
            app:itemTextSelectColor="@color/colorAccent"
            app:itemTextSelectScale="1.1"
            app:itemTextSize="20sp"
            app:lineColor="@color/colorPrimaryDark"
            app:linePadding="0dp"
            app:lineStroke="2dp"
            app:wheelOffset="2" />

        <Button
            android:id="@+id/main_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取选中的信息" />

        <Button
            android:id="@+id/main_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Preview" />

        <Button
            android:id="@+id/main_btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Next" />
    </LinearLayout>

</ScrollView>
